<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
   <li>
     <%= image_tag("rss.jpg", :alt => "rss feed",:width => 100,:height => 100) %>
     <%= link_to user.name, user %>
     <% if current_user.admin? && !current_user?(user) && !user.admin%>
       | <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
       | <%= link_to "make admin", user, method: :make_admin,
                                   data: { confirm: "You sure?" } %>
     <% end %>
</li>
  <% end %>
</ul>
<%= will_paginate %>
